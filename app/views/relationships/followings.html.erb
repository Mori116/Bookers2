<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Follow Users</h2>
      <% if @users.exists? %>
      <table class="table table-borderless">
        <thead class="title-border">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= link_to "Show", books_path %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>