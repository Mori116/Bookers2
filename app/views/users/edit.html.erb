<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>User info</h2>
        <div id="error-massage">
          <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
          <% end %>
        </div>

        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :name %><br />
            <%= f.text_field :name, class: 'form-controll' %>
          </div>
          <div class="form-group">
            <%= f.label :Image %><br />
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %><br />
            <%= f.text_area :introduction, class: 'form-controll' %>
          </div>
            <%= f.submit "Update User", class: 'form-group btn btn-secondary' %>
        <% end %>

    </div>
  </div>
</div>