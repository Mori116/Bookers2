<% if book.favorited_by?(current_user) %>
  <p class= "heart-color">
    <%= link_to book_favorites_path(book), :style => "color:red;", method: :delete, remote: true do %>
    ♥<%= book.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    ♡<%= book.favorites.count %>
    <% end %>
  </p>
<% end %>